{
  "name": "erp-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "serve:ssr:ERP_frontend": "node dist/ERP_frontend/server/server.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "build:prod": "ng build --configuration production",
    "serve:dist": "serve -s dist/ERP_frontend -l 8080",
    "lh:desktop": "CHROME_PATH=/snap/bin/chromium lighthouse http://localhost:8080 --preset=desktop --output html --output-path lighthouse-desktop.html --chrome-flags='--headless=new --user-data-dir=/tmp/lh_tmp'",
    "audit:local": "CHROME_PATH=/snap/bin/chromium lhci autorun --config=lighthouserc.json"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.3",
    "@angular/compiler": "^20.3.3",
    "@angular/core": "^20.3.3",
    "@angular/forms": "^20.3.3",
    "@angular/platform-browser": "^20.3.3",
    "@angular/platform-server": "^20.3.3",
    "@angular/router": "^20.3.3",
    "@angular/ssr": "^20.3.4",
    "express": "^5.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@analogjs/platform": "^1.21.2",
    "@analogjs/vite-plugin-angular": "^1.21.2",
    "@analogjs/vitest-angular": "^1.21.2",
    "@angular-devkit/build-angular": "^20.3.4",
    "@angular/build": "^20.3.4",
    "@angular/cli": "^20.3.4",
    "@angular/compiler-cli": "^20.3.3",
    "@angular/localize": "^20.3.3",
    "@lhci/cli": "^0.15.1",
    "@nx/devkit": "^21.6.3",
    "@nx/vite": "^21.0.0",
    "@playwright/test": "^1.55.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "jasmine-core": "~5.9.0",
    "jsdom": "^27.0.0",
    "lighthouse": "^12.8.2",
    "serve": "^14.2.5",
    "typescript": "~5.9.2",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^3.2.4",
    "zone.js": "^0.15.1"
  }
}
