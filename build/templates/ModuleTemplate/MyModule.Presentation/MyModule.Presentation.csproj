<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>MyModule.Presentation</RootNamespace>
    <AssemblyName>MyModule.Presentation</AssemblyName>
  </PropertyGroup>

  <!-- Enables ASP.NET Core types (controllers, Minimal APIs, attributes) in a class library -->
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MyModule.Application\MyModule.Application.csproj" />
  </ItemGroup>

  <!-- Optional: helpers commonly used at the edge -->
  <ItemGroup>
    <!-- If you declare endpoint mappers/filters, you may want these (safe to remove if unused) -->
    <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.*" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.Abstractions" Version="2.*" />
  </ItemGroup>

  <!-- (Optional) Allow internals for Presentation tests -->
  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>MyModule.Presentation.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
